<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="4"
    android:orientation="horizontal"
    android:id="@+id/ad" >
    <Button
        android:layout_column="3"
        android:text="ADV"
        android:id="@+id/btn_adv"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_box"
        android:layout_rowSpan="1"
        android:layout_columnSpan="4"
        android:layout_column="0" />

    <Button
        android:layout_column="3"
        android:text="Del"
        android:id="@+id/btn_del"
        />

    <Button android:text="1"
        android:id="@+id/btn1"/>

    <Button android:text="2"
        android:id="@+id/btn2"/>

    <Button android:text="3"
        android:id="@+id/btn3"/>

    <Button android:text="*"
        android:id="@+id/btn_multi"/>

    <Button android:text="4" android:id="@+id/btn4" />
    <Button android:text="5" android:id="@+id/btn5"/>

    <Button android:text="6" android:id="@+id/btn6"/>

    <Button android:text="-" android:id="@+id/btn_min"/>

    <Button android:text="7" android:id="@+id/btn7"/>

    <Button android:text="8" android:id="@+id/btn8"/>

    <Button android:text="9" android:id="@+id/btn9"/>

    <Button
        android:layout_gravity="fill"
        android:layout_rowSpan="3"
        android:text="+" android:id="@+id/btn_plus"/>

    <Button
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:text="0" android:id="@+id/btn_zero"/>

    <Button
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:text="/" android:id="@+id/btn_div"/>

    <Button android:text="." android:id="@+id/btn_dpoint"/>

    <Button
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:text="=" android:id="@+id/btn_equal"/>


</GridLayout>